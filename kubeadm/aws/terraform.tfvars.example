# AWS Configuration
aws_region = "us-west-2"

# Network Configuration
vpc_id             = "vpc-0123456789abcdef0"
subnet_id          = "subnet-0123456789abcdef0"
master_private_ip  = "10.0.1.10"
allowed_cidr       = "10.0.0.0/16"  # Restrict to your VPC or specific CIDR

# Cluster Configuration
cluster_name    = "my-k8s-cluster"
worker_count    = 2

# Instance Configuration
master_instance_type = "t3.medium"  # 2 vCPU, 4 GB RAM
worker_instance_type = "t3.small"   # 2 vCPU, 2 GB RAM
master_disk_size     = 20
worker_disk_size     = 20

# SSH Configuration
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-public-key-here"

# Common Tags
common_tags = {
  Environment = "development"
  Project     = "kubernetes-lab"
  Owner       = "your-name"
  ManagedBy   = "terraform"
}