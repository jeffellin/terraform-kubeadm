FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files if they exist
COPY go.* ./
RUN go mod download || true

# Copy source code
COPY wordpress-stats.go .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o wordpress-stats .

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder
COPY --from=builder /app/wordpress-stats .

# Expose port
EXPOSE 8080

# Run the application
CMD ["./wordpress-stats"]
